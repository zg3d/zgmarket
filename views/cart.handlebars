{{#if products}}
<section class="bg-white py-8 justify-center flex">
    <form method="POST" action="/sendCartEmail" class=" ">
        <h2 class="text-center  font-large text-purple-900">Shopping Cart</h2>
        <div class="container">
            <table class="text-left m-4" style="border-collapse:collapse">
                <thead>
                    <tr>
                        <th
                            class="py-4 px-6 bg-white  font-medium uppercase text-sm text-purple-900 border-b border-purple-900">
                            Image</th>
                        <th
                            class="py-4 px-6 bg-white  font-medium uppercase text-sm text-purple-900 border-b border-purple-900">
                            Title</th>
                        <th
                            class="py-4 px-6 bg-white  font-medium uppercase text-sm text-purple-900 border-b border-purple-900">
                            Quantity</th>
                        <th
                            class="py-4 px-6 bg-white  font-medium uppercase text-sm text-purple-900 border-b border-purple-900">
                            Total</th>

                    </tr>
                </thead>
                <tbody class =  "text-purple-900">
                    {{#each products}}

                    <tr class="">
                        <td class="py-4 px-6 border-b border-purple-900"><img
                                class="h-56 border-t-2 border-purple-900 w-full object-cover mt-2"
                                src="{{this.items.ImagePath}}" /></td>
                        <td class="py-4 px-6 border-b border-purple-900 text-center">{{this.items.Title}}</td>
                        <td class=" border-b border-purple-900 grid grid-cols-3 justify-center"><a href="/sub/{{this.items._id}}">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                    <path d="M10 20a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm5-11H5v2h10V9z" />
                                </svg></a>{{this.qty}}<a  href="/add/{{this.items._id}}">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                    <path
                                        d="M11 9V5H9v4H5v2h4v4h2v-4h4V9h-4zm-1 11a10 10 0 1 1 0-20 10 10 0 0 1 0 20z" />
                                    </svg></a></td>
                        <td class="py-4 px-6 border-b border-purple-900 text-center">{{this.Price}}</td>
                    </tr>

                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="">

                        <td class="py-4 px-6 border-b border-purple-900 text-right" colspan="3"> Total:</td>
                        <td class="py-4 px-6 border-b border-purple-900 text-center"> ${{totalCost}}</td>
                    </tr>
                    <tr class="">


                        <td class="py-4 px-6 border-b border-purple-900 text-right justify-end" colspan="4">

                            <input type="submit"
                                class="inline-block align-middle text-center select-none border font-normal text-white bg-purple-900 rounded-full hover:bg-purple-700 whitespace-no-wrap py-2 px-4 rounded text-base leading-normal no-underline "
                                role="button" value="Checkout">

                        </td>
                    </tr>
                </tfoot>
            </table>
            <div class="flex  justify-content-end mr-5">

            </div>
            <hr>

            <input type="text" name="totalCost" id="totalCost" style="width:1px;height:1px;" value={{totalCost}}>
        </div>
        </div>


    </form>
</section>
{{else}}
<div class="pt-5 pb-5">
    <div class="flex flex bg-grey-lightest justify-content-center p-5">
        <div class="w-1/60 flex flex-column text-center w-1/2">
            <strong>No Items In Cart</strong>
            <hr>
            <strong>Total: $0.00</strong>
        </div>
    </div>
    <div class="flex flex bg-grey-lightest justify-content-center p-5">
        <a href="/dashboard"
            class="mr-3 inline-block align-middle text-center select-none border font-normal whitespace-no-wrap py-2 px-4 rounded text-base leading-normal no-underline text-green-lightest bg-green hover:bg-green-light float-right"
            role="button" value="">Go Shopping!</a>
    </div>
</div>
{{/if}}